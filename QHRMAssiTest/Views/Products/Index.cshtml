
@{
    var serialNumber = 1; 
}

<div class="mb-3 text-lg-end">
    <a href="@Url.Action("AddProduct")" class="btn add-product-btn">
        <i class="fas fa-plus-circle"></i> Add Product
    </a>
</div>



<div class="table-responsive">
    <table class="table table-hover shadow-lg rounded">
        <thead class="table-light">
            <tr>
                <th scope="col">sr. no</th>
                <th scope="col">Product</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Created</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="table-row">
                    <td>@serialNumber</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@String.Format("{0:C}", product.Price)</td>
                    <td>@product.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a href="@Url.Action("View", new { id = product.Id })" class="btn btn-info btn-sm" data-toggle="tooltip" title="View Product">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="@Url.Action("EditProduct", new { id = product.Id })" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Edit Product">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("DeleteProduct", new { id = product.Id })" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Delete Product">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
</div>


